{
  "expo": {
    "name": "Bahia Driver",
    "slug": "bahia-driver",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/logo-bahia-driver-azul.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo-bahia-driver-branco.png",
      "resizeMode": "contain",
      "backgroundColor": "#005A9C"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fabio.fbn.bahiadriver",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "Este app precisa acessar sua localização para oferecer serviços de transporte.",
        "NSLocationAlwaysUsageDescription": "Este app precisa acessar sua localização em segundo plano para acompanhar corridas.",
        "NSCameraUsageDescription": "Este app precisa acessar sua câmera para fotos do veículo.",
        "NSPhotoLibraryUsageDescription": "Este app precisa acessar sua galeria para selecionar fotos do veículo."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptiveIcon-branco.png",
        "backgroundColor": "#005A9C"
      },
      "package": "com.fabio.fbn.bahiadriver",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECORD_AUDIO"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCIV-l5roJ4OE7cmaNsfc3HkSn4jDmA9gA"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-maps",
      [
        "expo-image-picker",
        {
          "photosPermission": "O app precisa acessar suas fotos para selecionar imagens do veículo.",
          "cameraPermission": "O app precisa acessar sua câmera para tirar fotos do veículo."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir Bahia Driver a usar sua localização para oferecer serviços de transporte e acompanhar corridas."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#005A9C",
          "defaultChannel": "default"
        }
      ]
    ],
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "extra": {
      "eas": {
        "projectId": "82e948b1-dfb5-4d10-b49d-b30f7eb8773f"
      }
    }
  }
}
